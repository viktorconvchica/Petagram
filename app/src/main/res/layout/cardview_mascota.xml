<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margen"
    android:layout_marginLeft="@dimen/margen"
    android:layout_marginRight="@dimen/margen"
    android:layout_marginTop="@dimen/margen"
    android:id="@+id/cvMascota">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro1"
            android:contentDescription="a"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/hueso_blanco"
                android:backgroundTint="#ffffff"/>


            <TextView
                android:id="@+id/tvCaption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/nombrecv"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margen"
                android:layout_marginRight="@dimen/margen"
                android:gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:text="@string/plikes"
                android:layout_marginLeft="@dimen/margen"
                android:layout_marginRight="@dimen/margen"
                android:textAlignment="center"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/imglikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:src="@drawable/hueso_amarillo"/>



        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>